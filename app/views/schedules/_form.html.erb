<%= form_for([@timetable, @timetable.schedules.build]) do |f| %>
  <div class="field">
    <%= f.label :matter %><br />
    <%= f.collection_select(:matter_id, @timetable.grid.matters.sort!{|m1,m2|m1.name <=> m2.name}, :id, :name) %>
  </div>
  <div class="field">
    <%= f.label :time_gap %><br />
    <%= f.collection_select(:time_gap_id, @time_gaps, :id, :to_s) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
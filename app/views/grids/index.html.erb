<h1>Listing grids</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Draft</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @grids.each do |grid| %>
  <tr>
    <td><%= grid.name %></td>
    <td><%= grid.draft %></td>
    <td><%= link_to 'Show', grid %></td>
    <td><%= link_to 'Edit', edit_grid_path(grid) %></td>
    <td><%= link_to 'Destroy', grid, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

